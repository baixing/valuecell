{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "bun install && bun run build",
    "railpackConfig": {
      "nodeVersion": "22"
    }
  },
  "deploy": {
    "startCommand": "nginx -g 'daemon off;'",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
